<div class="container w-full md:max-w-3xl mx-auto pt-20">

    <div class="w-full px-4 md:px-6 text-xl text-gray-800 leading-normal" style="font-family:Georgia,serif;">

        <!--Title-->
        <div class="font-sans">
            <p class="text-base md:text-sm text-green-500 font-bold">&lt; <a href="/"
                    class="text-base md:text-sm text-green-500 font-bold no-underline hover:underline">BACK TO HOME</a>
            </p>
            <h1 class="font-bold font-sans break-normal text-gray-900 pt-6 pb-2 text-3xl md:text-4xl">
                {{singleBlog.title}}</h1>
            <p class="text-sm md:text-base font-normal text-gray-600">Published {{format_date singleBlog.date_created}}</p>
        </div>

        <!--Post Content-->
        <p class="py-6">
            {{format_text singleBlog.content}}
        </p>
        <!--/ Post Content-->
    </div>

    <!--Tags -->
    <div class="text-base md:text-sm text-gray-500 px-4 py-6">
        Tags: <a href="#" class="text-base md:text-sm text-green-500 no-underline hover:underline">Link</a> . <a
            href="#" class="text-base md:text-sm text-green-500 no-underline hover:underline">Link</a>
    </div>

    <!--Divider-->
    <hr class="border-b-2 border-gray-400 mx-4">

    <!--Author-->
    <div class="flex w-full items-center font-sans px-4 py-6">
        <img class="w-10 h-10 rounded-full mr-4" src="http://i.pravatar.cc/300" alt="Avatar of Author">
        <div class="flex-1 px-2">
            <p class="text-base font-bold text-base md:text-xl leading-none mb-2">{{singleBlog.user.username}}</p>
            <p class="text-gray-600 text-xs md:text-base">Author</p>
        </div>
    </div>
    <!--/Author-->
</div>

<!-- component -->
<div id="comments-container" class="antialiased mx-auto max-w-screen-sm p-2">
    <h3 class="mb-4 text-lg font-semibold text-gray-900 text-center">Comments</h3>
    {{#if hasComments}}
    <div class="space-y-4">
        {{#each singleBlog.comments}}
        {{> blogCommentCard}}
        {{/each}}
    </div>
    {{else}}
     <p class="text-base text-center text-gray-400 flex-grow">No comments. Be the first!</p>
    {{/if}}
</div>


<form class="flex justify-center p-4">
   <div class="mb-4 w-96 bg-gray-50 rounded-lg border border-gray-200">
       <div class="py-2 px-4 bg-white rounded-t-lg">
           <label for="comment-container" class="sr-only">Your comment</label>
           <textarea id="comment-container" rows="4" class="px-0 w-full text-sm text-gray-900 bg-white border-0 focus:ring-0" placeholder="Write a comment..." required=""></textarea>
       </div>
       <div class="flex justify-between items-center py-2 px-3 border-t">
           <button id="comment-btn" data-id="{{singleBlog.blog_id}}" type="submit" class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-white bg-teal-600 hover:bg-teal-500 transition rounded-md shadow">
               Post comment
           </button>
       </div>
   </div>
</form>

<script src="/js/comment.js"></script>
<script src="/js/deleteComment.js"></script>